<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/fragment_fdcharacter_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".FdCharacterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/fragment_fdcharacter_imagen"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/fragment_fdcharacter_tv_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_below="@+id/fragment_fdcharacter_imagen"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/fragment_fdcharacter_tv_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_below="@+id/fragment_fdcharacter_tv_nombre"/>

    </LinearLayout>

</ScrollView>